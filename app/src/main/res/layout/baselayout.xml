<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/baselayout">

    <LinearLayout
        android:id="@+id/base_shopping_cart"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/checkoutBottomBar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/checkoutbar"
        android:backgroundTint="@color/primary"
        android:gravity="center"
        android:textColor="@color/secondary_text"
        android:textSize="30sp" />

    <Button
        android:id="@+id/checkoutCancel"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/checkoutBottomBar"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/roundrect"
        android:text="Cancel"
        android:textColor="@color/primary_text"/>

    <Button
        android:id="@+id/checkoutSubmit"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="50dp"
        android:layout_alignBottom="@id/checkoutBottomBar"
        android:layout_alignParentEnd="true"
        android:background="@drawable/roundrect"
        android:text="Submit"
        android:textColor="@color/primary_text"/>


</RelativeLayout>